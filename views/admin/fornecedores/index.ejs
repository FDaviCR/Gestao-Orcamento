<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/navbar.ejs')%>
<br>
<br>
<hr>
<div class="container">
    <hr>
    <h2>Fornecedores</h2>
    <hr>
    <a class="btn btn-success" href="/fornecedores/new">Novo Fornecedor</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fornecedor</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% fornecedores.forEach(fornecedor => { %>
                <tr>
                    <th><%= fornecedor.id %></th>
                    <th><%= fornecedor.nome%></th>
                    <th>
                        <a href="/fornecedores/edit/<%= fornecedor.id %>" class="btn btn-warning">Editar</a>
                        <form method="POST" action="/fornecedores/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%= fornecedor.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
            <%}) %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs')%>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Você quer deletar o fornecedor?");
        if(decision){
            form.submit();
        }else{
            console.log("Foi um acidente");
        }

    }

</script>