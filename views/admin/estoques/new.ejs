<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de Estoques</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/estoques/save">
                <input class="form-control" type="text" name="descricao" placeholder="Defina o nome do estoque"><br>
                <input class="form-control" type="text" name="detalhes" placeholder="Defina detalhes sobre o estoque"><br>
