<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/navbar.ejs')%>
<br>
<div class="container">
  <div class="card">
    <div class="card-header">
      <h2>Atualização de Produtos</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/produtos/update">
        <input class="form-control" type="text" name="produto" placeholder="Defina o nome do produto" value="<%= produto.produto %>"><br>
        <input class="form-control" type="number" min="1" step="any" name="valor" placeholder="Defina um valor" value="<%= produto.valor%>"><br>

        <input type="hidden" name="id" value="<%= produto.id %>">
        <button class="btn btn-primary">Atualizar</button>
      </form>
    </div>
  </div>
</div>

