<%- include ('../../partials/header.ejs')%>
<%- include ('../../partials/navbar.ejs')%>
<br>
<div class="dist">
    <a class="btn btn-info" href="/produtos">Voltar</a>
</div>
<div class="container">
<div class="container">
    <div class="card">
        <div class="card-header bg-dark">
            <h2>Cadastro de Produtos</h2>
        </div>
        <div class="card-body bg-gray">
            <form method="POST" action="/produtos/save">
                <label>Produto</label>
                <input class="form-control" type="text" name="produto" placeholder="Defina o nome do produto"><br>
                <label>Categoria</label>
                <select id="categoria" name="categoria" class="form-control">
                    <option value="">Selecione uma categoria</option>
                    <option value="papelaria">Papelaria</option>
                    <option value="designer">Designer</option>
                </select><br>
                <label>Valor</label>
                <input class="form-control" type="number" min="0" step="any" name="valor" placeholder="Defina um valor"><br>
                <label>Custo</label>
                <input class="form-control" type="number" min="0" step="any" name="custo" placeholder="Defina um custo"><br>
                <label>Unidade</label>
                <select id="unidade" name="unidade" class="form-control">
                    <option value="">Selecione uma unidade</option>
                    <option value="UN">Unidades</option>
                    <option value="KG">Quilos</option>
                    <option value="LT">Litros</option>
                </select><br>

                <button class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
    </div>
  </div>
</div>

<%- include ('../../partials/footer.ejs')%>